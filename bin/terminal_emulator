#!/usr/bin/env sh

# Black + DarkGrey
color0='#282828'
color8='#928374'
# DarkRed + Red
color1='#cc241d'
color9='#fb4934'
# DarkGreen + Green
color2='#98971a'
color10='#b8bb26'
# DarkYellow + Yellow
color3='#d79921'
color11='#fabd2f'
# DarkBlue + Blue
color4='#458588'
color12='#83a598'
# DarkMagenta + Magenta
color5='#b16286'
color13='#d3869b'
# DarkCyan + Cyan
color6='#689d6a'
color14='#8ec07c'
# LightGrey + White
color7='#a89984'
color15='#ebdbb2'

bg_color='#1d2021'
fg_color='#ebdbb2'
cr_color='#ffffff'

font='JetBrains Mono'
font_size=12

exec urxvt \
	+sb \
	-bc \
	-bg "$bg_color" \
	-fg "$fg_color" \
	-cr "$cr_color" \
	-fn "xft:$font:pixelsize=$font_size" \
	--color0 "$color0" \
	--color1 "$color1" \
	--color2 "$color2" \
	--color3 "$color3" \
	--color4 "$color4" \
	--color5 "$color5" \
	--color6 "$color6" \
	--color7 "$color7" \
	--color8 "$color8" \
	--color9 "$color9" \
	--color10 "$color10" \
	--color11 "$color11" \
	--color12 "$color12" \
	--color13 "$color13" \
	--color14 "$color14" \
	--color15 "$color15"
